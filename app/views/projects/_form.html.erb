  <h2 style="text-align: center">Create a new project</h2>

 <div class="form_freelanz">

  <%= simple_form_for [@project] do |f| %>
   <%= f.input :name %></p>
    <%= f.input :short_description, label: 'Tagline' %></p>
    <%= f.input :description, inline_label: 'Yes, remember me' %>
    <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :deadline, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>

 </div>
