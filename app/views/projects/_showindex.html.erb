<div>
  <% if @project.user == @user && @project.positions.count != 0 %>
    <p><%= link_to 'Add a position', new_project_position_path(@project) %></p>
  <% end %>


  <% if user_signed_in? && @project.user == @user %>
    <p><%= link_to 'Delete the project', project_path, method: :delete,
      data: { confirm: "Are you sure?" } %></p>
    <p><%= link_to 'Edit the project', edit_project_path(@project) %></p>
    <h4><%= link_to "See your projects", projects_path %></h4>

  <% elsif user_signed_in? %>
   <h4><%= link_to "See your projects", projects_path %></h4>
    <p><%= link_to 'See your job applications', user_positions_path %></p>
    <p><%= link_to "User page", user_path(current_user) %></p>

  <% end %>


  <h4><%= link_to "See all projects", projects_path(all: true) %></h4>

  <h4><%= link_to "Home", root_path %></h4>

</div>
