<div class="container">

  <!-- NO USER SIGNED IN OR PARAMS ALL : SHOW ALL PROJECTS -->
  <% if !user_signed_in? || params[:all] %>
    <h2>Freelanz has a total of <%= @projects.count %> projects !</h2>

  <!-- USER SIGNED IN & THERE IS ONLY ONE PROJECT : -->
  <% elsif user_signed_in? && @projects.count == 1 %>
    <h2>Your have one <%= @projects.count %> project on file.</h2>

  <!-- USER SIGNED IN THERE IS NO PROJECT : -->
  <% elsif  user_signed_in? && @projects.count == 0 %>
    <h2>Your have no active project on file.</h2>

  <!-- USER SIGNED IN & THERE ARE MORE THAN ONE PROJECT : -->
  <% elsif user_signed_in? %>
    <h2>You have a total of <%= @projects.count %> projects !</h2>

  <!-- USER SIGNED IN & THERE ARE MORE THAN ONE PROJECT : -->
  <% else %>
    <h2>You have a total of <%= @projects.count %> projects !</h2>
  <% end %>

  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-xs-12 col-sm-4">
        <%= render "shared/project_card", project: project %>
      </div>
    <% end %>
  </div>


  <% if !user_signed_in? || params[:all] %>

    <h4><%= link_to "See your projects", projects_path %></h4>
  <% else %>
    <h4><%= link_to "See all projects", projects_path(all: true) %></h4>

  <% end %>

  <% if user_signed_in? %>
    <%= link_to 'See your job applications', user_positions_path %>
  <% end %>

  <h4><%= link_to "Create New Project", new_project_path %></h4>

  <h4><%= link_to "Home", root_path %></h4>

