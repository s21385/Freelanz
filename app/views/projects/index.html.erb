<% if @user %>

  <% @projects.each do |project| %>
    <%= link_to project.name, project_path(project) %>
    <%= project.short_description %>
    <%= project.description %>
    <%= project.deadline %>
    <%= project.start_date %>
  <% end %>

<% else %>

  <% @projects.each do |project| %>
    <%= link_to project.name, project_path(project) %>
    <%= project.short_description %>
    <%= project.description %>
    <%= project.deadline %>
    <%= project.start_date %>
  <% end %>

<% end %>

