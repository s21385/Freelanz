<% if user_signed_in? %>
  <% @groups.each do |group| %>
    <%= link_to group.name, group_path(group) %>
    <%= group.description %>
  <% end %>

  <%= link_to 'Create a new group', new_group_path %>
<% else %>
  <% @groups.each do |group| %>
    <%= link_to group.name, group_path(group) %>
    <%= group.description %>
  <% end %>
<% end %>

