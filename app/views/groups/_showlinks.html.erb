<div>

  <p> <%= link_to 'Join this group', new_group_group_membership_path(@group) %> </p>

  <p><%= link_to 'Delete the group', group_path(@group), method: :delete,
        data: { confirm: "Are you sure?" } %></p>

  <p><%= link_to 'Edit the group', edit_group_path(@group) %></p>
  <p><%= link_to 'Create a new group', new_group_path(@group) %></p>
  <p><%= link_to 'Back to groups list', groups_path %></p>

  <% if user_signed_in? %>
    <p><%= link_to "User page", user_path(current_user) %></p>
  <% end %>

  <h4><%= link_to "Home", root_path %></h4>

</div>

