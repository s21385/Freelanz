<h3>Group name:<%= " " %><%= @group.name %></h3>
<p>Description:<%= " " %><%= @group.description %></p>
<p>Total members:<%= " " %><%= @group.group_memberships.count %></p>

<% members = 0 %>
<% @group.group_memberships.each do |member| %>
<% members += 1 %>
  <p><%= members %> - Name:<%= member.user.first_name %><%= " " %><%= member.user.last_name %><%= " " %><%= member.group.user.skill_level %></p>


<% end %>





<%= link_to 'Join this group', new_group_group_membership_path(@group) %>


<%= link_to 'Delete the group', group_path(@group), method: :delete,
      data: { confirm: "Are you sure?" } %>

<%= link_to 'Edit the group', edit_group_path(@group) %>

<%= link_to 'Create a new group', new_group_path(@group) %>

<%= link_to 'Back to groups list', groups_path %>

<h4><%= link_to "Home", root_path %></h4>
