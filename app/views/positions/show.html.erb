<h1>Project name:<%= " " %><b><%= @project.name %></b></h3>
<p>Project Leader:<%= " " %><%= @project.user.first_name %><%= " " %>
  <%= @project.user.last_name %></p>
<p>Description:<%= " " %><%= @project.short_description %></p>
<p>Start date:<%= " " %><%= @project.start_date %></p>
<p>Deadline:<%= " " %><%= @project.deadline %></p>
<p>Details:<%= " " %><%= @project.description %></p>


  <p>Number of applicants:<%= " " %> <span id="cpt-<%= @position.id %>"><%= @position.user_positions.count %></span></p>
   <% if @position.user_positions.where(user_id: @current_user).count == 0 && @position.project.user != @user %>
        <span id="apply-<%= @position.id %>"><%= link_to "Apply", position_user_positions_path(@position), method: :post, remote: :true %></span>
  <% end %>
  <% positions = 0 %>
  <% @user_positions.sort_by { |hsh| hsh[:status] }.each do |application| %>
  <% positions += 1 %>
      <h4><%= positions %> - Name:<%= " " %><%= application.user.first_name %><%= " " %><%= application.user.last_name %>
          Status:<%= " " %><%= application.status %></h4>
      <p>Skill level:<%= " " %><%= application.user.skill_level %></p>
      <p>email: <%= " " %><%= application.user.email %>
      <p>Phone: <%= " " %><%= application.user.phone %>
      <p>Usual asking rate: <%= " " %><%= application.user.rate_cents %>
      <% if application.user.linkedin_account %>
        <p>LinkedIn: <%= " " %><%= application.user.linkedin_account %>
      <% end %>
      <% if application.user.facebook_account %>
        <p>LinkedIn: <%= " " %><%= application.user.facebook_account %>
      <% end %>
      <% if application.user.github_account %>
        <p>LinkedIn: <%= " " %><%= application.user.github_account %>
      <% end %>
  <% end %>

<% if user_signed_in? %>
  <%= link_to 'See your job applications', user_positions_path %>
  <%= link_to 'Add a position', new_project_position_path(@project) %>
  <%= link_to 'Delete the project', project_path, method: :delete,
    data: { confirm: "Are you sure?" } %>
  <%= link_to 'Edit the project', edit_project_path(@project) %>
  <%= link_to 'See your job applications', user_positions_path %>
<% end %>

<h4><%= link_to "See your projects", projects_path %></h4>

<h4><%= link_to "See all projects", projects_path(all: true) %></h4>

