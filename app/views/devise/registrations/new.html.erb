
<div class="container">
  <div>
   <h2><%= link_to " Sign up with linkedin", "https://www.linkedin.com/oauth/v2/authorization?response_type=code&client_id=#{ENV['LINKEDIN_CLIENT_ID']}&redirect_uri=http://localhost:3000/pages/linkedin_callback&state=987654321&scope=r_basicprofile r_emailaddress", class: "fab fa-linkedin"%></h2>

  </div>
  <h2>Sign up</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, required: true %>
      <%= f.input :last_name, required: true %>
      <%= f.input :address %>
      <%= f.input :phone %>
      <%= f.input :rate_cents %>

      <%= f.input :linkedin_id %>
      <%= f.input :github_id %>
      <%= f.input :skill_level, collection: User::SKILL_LEVELS %>
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", :class => "btn btn-success" %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>

</div>
