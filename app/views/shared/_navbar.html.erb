<div class="navbar-wagon">
  <!-- LOGO -->
  <div class= "navbar-wagon-brand">
    <%= link_to root_path do %>
      <%= image_tag "freelanz7.png", height: 70 %>
    <% end %>

  </div>

  <!-- Links when logged in -->
  <% if user_signed_in? %>
    <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm padopt">
    <%= link_to "Dashboard", dashboard_path, class:"dashboard" %>

    <%= link_to "Create Project", new_project_path, class:"create_projects" %>


    <!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
      <div class="dropdown">

        <% if !current_user.linkedin_id.nil? %>
          <%= image_tag current_user.linkedin_photo , class: "avatar dropdown-toggle",
            id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <% elsif %>

          <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id:
            "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <% end %>

          <% if user_signed_in? %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to users_show_path(current_user.id) do %>
                <i class="fa fa-user"> Profile</i>
            </li>
          <% end %>
        <% end %>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fas fa-sign-out-alt"> Log out</i>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
      <% else %>
        <!-- Login link (when logged out) -->
         <div id="linkedin_signup" class="navbar-wagon-brand">

            <%= link_to "https://www.linkedin.com/oauth/v2/authorization?response_type=code&client_id=#{ENV['LINKEDIN_CLIENT_ID']}&redirect_uri=http://#{ENV['LINKED_IN_NEW']}/pages/linkedin_callback&state=987654321&scope=r_basicprofile r_emailaddress" do %>
              <i class="fab fa-linkedin"></i>
              <p>Connect with LinkedIn</p>
           <% end %>

          </div>


  <% end %>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
      <% if user_signed_in? %>
          <li>
            <%= link_to current_user.linkedin_profile_url do %>
              <i class="fa fa-user"> Profile</i>
            <% end %>
          </li>
        <% end %>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fas fa-sign-out-alt"> Log out</i>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>




