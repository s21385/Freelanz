<div class="navbar-wagon">
  <!-- LOGO -->
  <div class= "navbar-wagon-brand"><%= link_to root_path do %>
      <%= image_tag "freelanz7.png", height: 70 %>
    <% end %>
  </div>


  <% if user_signed_in? %>
    <!-- Right Navigation -->
    <div class="navbar-wagon-right hidden-xs hidden-sm padopt">
  <%= link_to "Dashboard", dashboard_path, class:"dashboard" %>

  <%= link_to "Create Project", new_project_path, class:"create_projects" %>

  <%= link_to "View Projects", project_path(current_user.projects), class:"view_projects" %>

    <!-- Links when logged in -->
    <!-- Avatar with dropdown menu -->
<div class="navbar-wagon-item">
    <div class="dropdown">
      <%= cl_image_tag @user.try(:photo), class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <!-- PATH MISSING BECAUSE ITS NOT IN ROUTES  -->
          <%= link_to "path" do %>
            <i class="fa fa-user"> Profile</i>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fas fa-sign-out-alt"> Log out</i>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <div class= "navbar-wagon-brand" >
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %>
        <%= link_to "Log in", new_user_session_path, class: "btn btn-primary" %>
      </div>
    <%end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to "path" do %>
            <i class="fa fa-user"> Profile</i>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fas fa-sign-out-alt"> Log out</i>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>



