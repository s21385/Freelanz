<%= link_to project_path(project) do %>
  <div class="card">
    <div class="project-card-header">
      <p><%= project.created_at.strftime("%m/%d/%Y") %></p>
      <p>STATUS<%# project.status %></p>
    </div>

    <div class="text-center">
      <%= cl_image_tag(project.photo, width: 60, height: 60, crop: :fill) unless project.photo.file.nil? %>
      <h3><%= project.name %></h3>
      <p><%= project.description %></p>
    </div>

    <div class="project-card-footer">
      <% project.positions.first(3).each do |pos| %>
        <p><%= pos.name %></p>
      <% end %>
    </div>

      <%# link_to "Details", project_path(t) %>

    <div class="card-hover">
      <p>More Info</p>
    </div>
  </div>
<% end %>
